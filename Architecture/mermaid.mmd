  %% MAIN FLOW CONNECTIONS

  %% SPEED LAYER FLOW
  ds1 -- "Ingest" --> gcs1
  gcs1 -- "/streaming/ JSON" --> kafka_prod
  kafka_prod -- "Events" --> kafka
  zk -. "Manages" .-> kafka
  kafka -- "Stream" --> spark_stream
  gcs1 -. "Static data<br/>/raw/users.csv,<br/>movies.csv" .-> spark_stream
  spark_stream -- "Real-time metrics" --> bq
  bq -- "Realtime data" --> looker1

  %% BATCH LAYER FLOW
  ds1 -- "Batch ingest" --> gcs1
  gcs1 -- "/raw/ CSVs" --> spark_batch
  cron -- "Runs Batch_pipeline_Netflix.py" --> spark_driver_b
  spark_batch -- "Historic tables" --> bq
  bq -- "Historical data" --> looker2

  %% VM connections
  vm_desc --> vm_fs
  vm_desc -. "Hosts Spark + Kafka containers" .-> spark_master
  vm_desc -. "Hosts Spark + Kafka containers" .-> kafka

  %% INFRA INTERCONNECTIONS TO SHARED SPARK CLUSTER
  spark_driver_s -- "submits jobs" --> spark_master
  spark_stream -. "uses executors" .-> spark_master
  spark_driver_b -- "submits jobs" --> spark_master
  spark_batch -. "uses executors" .-> spark_master

  %% Class assignments for nodes
  class ds1 DataSource
  class gcs1 Storage
  class kafka_prod,kafka,zk,spark_driver_s,spark_stream SpeedLayer
  class spark_driver_b,cron,spark_batch BatchLayer
  class spark_master,worker1,worker2 Infra
  class bq Serving
  class looker1,looker2 Viz